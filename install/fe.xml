<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?>
<installation version="1.0">
    <info>
        <appname>jflicks media system FE</appname>
        <appversion>1.0</appversion>
        <appsubpath>jflicks-fe</appsubpath>
        <authors>
            <author email="djb@jflicks.org" name="Douglas Barnum"/>
        </authors>
        <url>http://www.jflicks.org</url>
        <uninstaller name="Uninstaller.jar" write="yes"/>
        <javaversion>1.6</javaversion>
        <requiresjdk>no</requiresjdk>
        <writeinstallationinformation>no</writeinstallationinformation>
        <pack200/>
        <run-privileged condition="izpack.windowsinstall.vista|izpack.windowsinstall.7"/>
    </info>
    <guiprefs height="600" resizable="no" width="800">
        <modifier key="useFlags" value="yes"/>
        <modifier key="langDisplayType" value="default"/>
    </guiprefs>
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <variables>
    </variables>

    <resources>
        <res id="LicencePanel.licence" parse="yes" src="fe/COPYING.txt"/>
        <res id="Installer.image" src="resources/side.png"/>
        <res id="userInputSpec.xml" src="fe_userInputSpec.xml"/>
        <res id="ProcessPanel.Spec.xml" src="fe_processPanel.Spec.xml"/>
    </resources>
    <panels>
        <panel classname="CheckedHelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="UserInputPanel"/>
        <panel classname="ProcessPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    <packs>
        <pack name="Base" preselected="yes" required="yes">
            <description>These are the base files needed.</description>
            <file override="update"
                src="fe/COPYING.txt" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/db" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/log" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/theme" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/remotes" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/bundle/db4o-7.12.126.14142-osgi.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-base.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-jna.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-imagecache-system.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-nms-remote.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-swingx.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-timingframework.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-ui.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/org.apache.felix.bundlerepository-1.4.2.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/org.apache.felix.configadmin-1.2.4.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/org.apache.felix.eventadmin-1.0.0.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/org.apache.sling.commons.log-2.0.6.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/org.apache.felix.shell-1.4.1.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/org.apache.felix.shell.tui-1.4.1.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/remote-1.0.0.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/startup.sh" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/startup.bat" targetdir="$INSTALL_PATH/"/>
            <file override="askfalse"
                src="fe/jflicks.properties" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/bin/felix.jar" targetdir="$INSTALL_PATH/bin"/>
            <file override="update"
                src="fe/conf/config.properties" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-script.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/JFlicks_FE.desktop" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/postinstall.sh" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="fe/bin/jflicks-install.jar" targetdir="$INSTALL_PATH/bin"/>
            <executable failure="abort" keep="true" stage="never" targetfile="$INSTALL_PATH/startup.sh">
                <os family="Unix"/>
            </executable>
            <executable failure="abort" keep="true" stage="never" targetfile="$INSTALL_PATH/postinstall.sh">
            </executable>

            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/startup.sh" type="shell"/>
            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/startup.bat" type="shell"/>
            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/JFlicks_FE.desktop" type="shell"/>
            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/postinstall.sh" type="shell"/>
        </pack>
        <pack name="lirc" hidden="true" required="yes" os="linux">
            <description>Lirc for linux.</description>
            <file override="update"
                src="fe/bundle/jflicks-rc-lirc.jar" targetdir="$INSTALL_PATH/bundle"/>
        </pack>
        <pack name="winlirc" hidden="true" required="yes" os="windows">
            <description>Lirc for windows.</description>
            <file override="update"
                src="fe/bundle/jflicks-rc-winlirc.jar" targetdir="$INSTALL_PATH/bundle"/>
        </pack>
        <pack name="Watch TV Recordings" preselected="no" required="no">
            <description>Be able to Schedule and Watch Recordings.  Of course you must have at least one jflicks media system server installed on your network with DVR Functionality enabled.</description>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-recording.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-schedule.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-player-mplayer.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/conf/mplayer.conf" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/conf/mplayer.properties" targetdir="$INSTALL_PATH/conf"/>
        </pack>
        <pack name="Video Library" preselected="no" required="no">
            <description>Play video files on your system from your network.  Again you must have a jflicks media system server installed on your network that is running a Video Manager service.</description>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-video.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-player-mplayer.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/conf/mplayer.conf" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/conf/mplayer.properties" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/conf/videoscreen.properties" targetdir="$INSTALL_PATH/conf"/>
        </pack>
        <pack name="Live TV" preselected="no" required="no">
            <description>Watch Live TV.  This is a DVR "live" TV that you can pause etc.  Of course you must have at least one jflicks media system server installed on your network with DVR Functionality enabled.</description>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-livetv.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-player-mplayer.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/conf/mplayer.conf" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/conf/mplayer.properties" targetdir="$INSTALL_PATH/conf"/>
        </pack>
        <pack name="Google TV" preselected="no" required="no">
            <description>Watch Google TV web sites.  You need a recent version of chrome installed.  This screen simply launches chrome with a particuler URL.  See conf/googletv.properties to customize your selections.</description>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-googletv.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-player-chrome.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/conf/googletv.properties" targetdir="$INSTALL_PATH/conf"/>
        </pack>
        <pack name="Photos" preselected="no" required="no">
            <description>Slideshow of your Photos.  This implies you have a jflicks media system server running on your network with a Photo Manager service.</description>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-photo.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-player-photoshow.jar" targetdir="$INSTALL_PATH/bundle"/>
        </pack>
        <pack name="Previews" preselected="no" required="no">
            <description>Watch the latest Movie previews.  Of course you need a jflicks media system server running on your network with a Trailer service.</description>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-preview.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-player-mplayer.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/conf/mplayer.conf" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/conf/mplayer.properties" targetdir="$INSTALL_PATH/conf"/>
        </pack>
