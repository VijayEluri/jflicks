        <pack name="DVD" preselected="no" required="no">
            <description>Needed if you plan on watching DVDs from a DVD drive.</description>
            <file override="update"
                src="fe/bundle/jflicks-player-vlcdvd.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-dvd.jar" targetdir="$INSTALL_PATH/bundle"/>
        </pack>
        <pack name="On Demand" preselected="no" required="no">
            <description>Needed if you plan on watching an On Demand source.  One of the jflicks media system servers on your network must be running an On Demand service.</description>
            <file override="update"
                src="fe/bundle/jflicks-player-vlcj.jar" targetdir="$INSTALL_PATH/bundle"/>
            <file override="update"
                src="fe/conf/vlc.properties" targetdir="$INSTALL_PATH/conf"/>
            <file override="update"
                src="fe/bundle/jflicks-ui-view-fe-screen-ondemand.jar" targetdir="$INSTALL_PATH/bundle"/>
        </pack>
    </packs>
    <native name="ShellLink.dll" type="izpack"/>
    <native name="ShellLink_x64.dll" type="izpack"/>
</installation>
