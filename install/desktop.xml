<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?>
<installation version="1.0">
    <info>
        <appname>JFlicks Desktop</appname>
        <appversion>1.0</appversion>
        <appsubpath>jflicks-desktop</appsubpath>
        <authors>
            <author email="djb@jflicks.org" name="Douglas Barnum"/>
        </authors>
        <url>http://www.jflicks.org</url>
        <uninstaller name="Uninstaller.jar" write="yes"/>
        <javaversion>1.6</javaversion>
        <requiresjdk>no</requiresjdk>
        <writeinstallationinformation>no</writeinstallationinformation>
        <pack200/>
        <run-privileged condition="izpack.windowsinstall.vista|izpack.windowsinstall.7"/>
    </info>
    <guiprefs height="600" resizable="no" width="800">
        <modifier key="useFlags" value="yes"/>
        <modifier key="langDisplayType" value="default"/>
    </guiprefs>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    <resources>
        <res id="LicencePanel.licence" parse="yes" src="client/COPYING.txt"/>
        <res id="shortcutSpec.xml" src="desktop_shortcutSpec.xml"/>
        <res id="Unix_shortcutSpec.xml" src="desktop_Unix_shortcutSpec.xml"/>
        <res id="Installer.image" src="resources/side.png"/>
    </resources>
    <panels>
        <panel classname="CheckedHelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    <packs>
        <pack name="Server Configuration" preselected="yes" required="yes">
            <description>This application can configure all your jflicks servers and can run anywhere on your network.  There will be a few configuration adjustments each server will need.</description>
            <file override="update"
                src="client" targetdir="$INSTALL_PATH/"/>
            <executable failure="abort" keep="true" stage="never" targetfile="$INSTALL_PATH/client/startup.sh"/>
            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/client/startup.sh" type="shell"/>
        </pack>
        <pack name="Scheduler" preselected="yes" required="no">
            <description>This application allows you to schedule recordings for any jflicks server on your network.  You can also examine upcoming recordings and see what currently is recorded.  All this functionality is available using the TV user interface, but this application has better search capabilities.  Of course your jflicks server must have DVR functionality enabled to use this program.</description>
            <file override="update"
                src="scheduler" targetdir="$INSTALL_PATH/"/>
            <executable failure="abort" keep="true" stage="never" targetfile="$INSTALL_PATH/scheduler/startup.sh"/>
            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/scheduler/startup.sh" type="shell"/>
        </pack>
        <pack name="Video Manager" preselected="yes" required="no">
            <description>If you maintain some video files on your network you can add descriptions and artwork that is associated with your files using this application.  This application goes hand in hand with the Video Manager service running in a jflicks server.  If you do not have the Video Manager service in at least one of your jflicks servers, then there is no need for this application.</description>
            <file override="update"
                src="metadata" targetdir="$INSTALL_PATH/"/>
            <executable failure="abort" keep="true" stage="never" targetfile="$INSTALL_PATH/metadata/startup.sh"/>
            <parsable encoding="iso-8859-1"
                targetfile="$INSTALL_PATH/metadata/startup.sh" type="shell"/>
        </pack>
    </packs>
    <native name="ShellLink.dll" type="izpack"/>
    <native name="ShellLink_x64.dll" type="izpack"/>
</installation>
