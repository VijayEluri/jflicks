<userInput>
    <panel order="0">
        <createForPack name="DVR Functionality"/>
        <field size="2" txt="Schedule's Direct" type="title"/>
        <field type="text" variable="sdusername">
            <spec size="15" txt="User (email)"/>
        </field>
        <field align="left" type="password" variable="sdpassword">
            <spec>
                <pwd set="" size="25" txt="Password"/>
                <pwd set="" size="25" txt="Verify"/>
            </spec>
            <validator
                class="com.izforge.izpack.util.PasswordEqualityValidator" txt="Both passwords must match."/>
        </field>
    </panel>
    <panel order="1">
        <createForPack name="Video Manager"/>
        <field type="staticText" align="left" id="We have two Video Manager implementations.  The 'System' implementation is all of our own code and you manage all metadata using the Video Manager desktop application.  This is a good choice if you have a library of Home Video.  The other choice is an implementation that can used the output of the YAMJ (Yet Another Movie Jukebox) project.  This is a good choice if you just have movies and TV video.  Of course YAMJ must be installed and you have configured and run it to generate it's Jukebox metadata."/>
        <field type="radio" variable="videoManagerChoice">
            <description align="left" id="Please Select a Video Manager"/>
            <spec>
                <choice id="System" value="System" set="true"/>
                <choice id="Yet Another Movie Jukebox" value="YAMJ"/> 
            </spec>
        </field>
    </panel>
    <panel order="2">
        <field type="check" variable="autostart">
            <description align="left" txt="Setup to autostart on login."/>
            <spec false="false" set="false" true="true" txt="Auto Start on Login"/>
        </field>
    </panel>

</userInput>
