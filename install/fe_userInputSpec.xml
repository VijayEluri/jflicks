                    value="nVidia_UR88A.LircJob.lircrc"/>  
                <choice id="Medion_20016096"
                    value="Medion_20016096.LircJob.lircrc"/>  
                <choice id="Medion_MD8800"
                    value="Medion_MD8800.LircJob.lircrc"/>  
                <choice id="TiVo" value="TIVO_Series_2.LircJob.lircrc"/>  
